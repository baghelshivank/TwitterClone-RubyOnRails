<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, placeholder:"Name", autocomplete: "name" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, placeholder:"Email", autocomplete: "email" %>
  </div>
  <br/>
  <div class="field">
    <%= f.date_select :dob, :start_year=>1900, :end_year=>2023, class: 'form-control' %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, placeholder:"UserName", autocomplete: "username" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: "Password (#{@minimum_password_length} characters minimum)", autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder: 'Repeat Password', autocomplete: "new-password" %>
  </div>
  <br/>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
